{
    "cli": {
        "version": ">= 13.4.2",
        "appVersionSource": "remote"
    },
    "build": {
        "development-simulator": {
            "developmentClient": true,
            "distribution": "internal",
            "ios": {
                "simulator": true
            },
            "channel": "development-simulator"
        },
        "preview": {
            "distribution": "internal",
            "autoIncrement": true,
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "simulator": true
            },
            "channel": "preview"
        },
        "production": {
            "autoIncrement": true,
            "android": {
                "image": "latest"
            },
            "ios": {
                "image": "latest"
            },
            "channel": "production"
        }
    }
}